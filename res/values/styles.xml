<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
	    <item name="android:windowNoTitle">true</item>
    </style>
    
   <style name="CardViewStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">100px</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/defaultCardBackground</item>
        <item name="android:layout_marginTop">80px</item>
    </style>

    <style name="CardContent" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">12px</item>
        <item name="android:paddingRight">12px</item>
        <item name="android:paddingTop">18px</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingBottom">18px</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="cardTextStyle">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="homeBarLayoutStyle">
        <item name="android:background">@color/defaultCardBackground</item>
    </style>
    
</resources>
